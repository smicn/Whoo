<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lamar.cs.whoo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_facial_recognition"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lamar.cs.whoo.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.lamar.cs.whoo.MainActivity"
            android:label="@string/main_title" >
        </activity>
        <activity
            android:name="com.lamar.cs.whoo.SettingsActivity"
            android:label="Whoo Settings" >
        </activity>
        <activity
            android:name="com.lamar.cs.whoo.FaceActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>


</application>

    <uses-permission android:name = "android.permission.CAMERA" />
	<uses-permission android:name = "android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name = "android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-feature android:name = "android.hardware.camera" />
	<uses-feature android:name = "android.hardware.camera.autofocus" />

</manifest>
